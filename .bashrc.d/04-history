# Bash history configuration

# Allow history list to be unlimited.
export HISTSIZE=-1
# Allow history file to be unlimited.
export HISTFILESIZE=-1

# Ignore commands beginning with a space.
# Remove previous commands matching current one.
export HISTCONTROL='erasedups:ignorespace'

# Ignore uninteresting commands.
export HISTIGNORE='ls:ll:history:pwd:clear:exit:bg:fg:jobs:git status'

# Timestamps
export HISTTIMEFORMAT='%F %T '

# vim: filetype=sh
